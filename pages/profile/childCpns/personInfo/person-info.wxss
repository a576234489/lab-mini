.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column; 
  box-sizing: border-box;
  background-color: #f2f1f6;
}
.title {
  font-size: 32rpx;
  text-align: center;
  padding: 30rpx 0 20rpx;
  background-color: #fff;
}
.info-list {
  padding: 40rpx 0 40rpx 40rpx;
  background-color: #fff;
  margin-top: 10rpx;
}
.info-list view:nth-child(n + 2) {
  margin-top: 40rpx;
}
.info-list>view>view:nth-child(1){
  font-size: 24rpx;
  font-weight: 700;
}
.info-list>view>view:nth-child(2){
  font-size: 30rpx;
  color: #808080;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #999999;
  width: 100%;
}