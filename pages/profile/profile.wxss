/* pages/profile/profile.wxss */
.container {
  width: 100%;
  height: 100%;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column; 
  box-sizing: border-box;
  background-color: #f2f1f6;
}
.profile-title {
  font-size: 46rpx;
}
.user-info {
  background-color: #0bacfc;
  border-radius: 25rpx;
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
  padding-top: 40rpx;
}
.user-info view {
  width: 100%;
}
.user-info image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 auto;
}
.user-info .name {
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  margin-top: 5rpx;
}
.user-info .tel,.user-info .school {
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  margin-top: 10rpx;
}
.user-info .school {
  margin-top: 0;
  margin-bottom: 40rpx;
}
.funtion-list {
  background-color: #fff;
  border-radius: 25rpx;
  margin-top: 40rpx;
  padding: 40rpx;
}
.funtion-list image {
  width: 55rpx;
  height: 55rpx;
}
.funtion-list view {
  display: flex;
}
.funtion-list view:nth-child(n+2) {
  margin-top: 20rpx;
}
.funtion-list text {
  width: 100%;
  border-bottom: 1px solid #999999;
  margin: 0 20rpx;
  font-size: 30rpx;
  padding-bottom: 30rpx;
}