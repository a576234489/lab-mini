/* pages/result/appointApproval/appointApprovalResult.wxss */
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
}
.appoint-approval-result {
  padding-bottom: 310rpx;
  box-sizing: border-box;
}
.appoint-approval-result image{
  width: 200rpx;
  height: 200rpx;
  
}
.appoint-approval-result {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.appoint-approval-result view {
  width: 100%;
}
.appoint-approval-result view:nth-child(2) {
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  margin-top: 30rpx;
}
.appoint-approval-result view:nth-child(3) {
  color: #4d4d50;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
}
.btn-group {
  display: flex;
  justify-content: space-evenly;
  margin-top: 110rpx;
}
.btn {
  padding: 0;
  height: 60rpx;
  width: 200rpx;
  line-height: 60rpx;
  background-color: red;
  border-radius: 25rpx;
  font-size: 30rpx;
  background-color: #e6e6e6;
}
.btn-group .active {
  background-color: #2fbfff;
  color: #fff;
}