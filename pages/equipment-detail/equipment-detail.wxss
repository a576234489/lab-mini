/* pages/equipment-detail/equipment-detail.wxss */
@import "../../wxParse/wxParse.wxss";
.container {
  width: 100%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
  /* flex-wrap: wrap; */
  flex-direction: column;
}
.d-swiper,.d-swiper swiper,.banner {
  height: 460rpx;
  width: 100%;
}
.base-info-parent {
  position: relative;
  width: 100%
}
.base-info {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 20rpx;
}
.equip-name {
  font-size: 30rpx;
  font-weight: 700;
  width: 60%;
  margin-left: 20rpx;
  color: #fff;
}
.equip-status {
  font-size: 26rpx;
  color: #0071bc;
}
.swiper-index {
  margin-right: 20rpx;
  font-size: 26rpx;
  background-color: #4d4d4d;
  padding: 5rpx 20rpx;
  border-radius: 25rpx;
  color: #fff;
}
.base-pay-address {
  margin-top: 40rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.base-pay-address .rmb {
  font-size: 22rpx;
  font-weight: 700;
}
.base-pay-address .base-pay {
  font-size: 48rpx;
}
.base-pay-address .base-address {
  font-size: 26rpx;
  color: #4d4d4d;
}
.function-icon {
   display: flex;
}
.function-icon view{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  font-size: 22rpx;
  color: #4d4d4d;
  text-align: center;
}
.appoint,.maintain {
  width:70rpx;
  height:70rpx
}
.function-icon view:nth-child(1) {
  margin-right: 20rpx;
}
.base-info-operation-button {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  padding: 0 60rpx;

}
.base-info-operation-button button{
  background-color: #f2f1f6;
  font-size: 26rpx;
  border-radius: 20rpx;
  color: #000;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 0;
}
.base-info-operation-button .active-button {
  background-color: #2fbfff;
  font-size: 26rpx;
  border-radius: 20rpx;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 0;
}
.base-info-operation-content {
  margin: 20rpx 20rpx;
  font-size: 26rpx;
  color: #4d4d4d;
}
.study-video {
  display: flex;
  flex-direction: column;
}
.video-title {
  font-size: 26rpx;
  font-weight: 700;
  margin-left: 20rpx;
}

.video-content {
  display: flex;
  overflow-x: auto;
}
.video-content video {
  width: 300rpx;
  height: 200rpx;
  flex-shrink: 0;
  margin: 20rpx 20rpx;
  border-radius: 25rpx;
}
.video_cover image {
  width: 300rpx;
  height: 200rpx;
}
.play-img {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 2;
}
.video_bg_black {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,.5);
}
.video_cover .video-title {
  color: #fff;
  font-size: 24rpx;
  margin: 20rpx;
  font-weight: 500;
}
.appoint-dialog {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
}
.dialog-content {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 12;
  background-color: #fff;
  border-radius: 25rpx;
  margin-top: 30rpx;
  flex-direction: column;
}
.select-date {
  text-align: center;
  background-color: #f2f1f6;
  font-size: 40rpx;
  border-radius: 25rpx 25rpx 0 0;
  padding: 40rpx 0;
}
.weeks {
  display: flex;
  justify-content: space-evenly;
  background-color: #f2f1f6;
  color: #60c0fd;
  font-size: 28rpx;
}

