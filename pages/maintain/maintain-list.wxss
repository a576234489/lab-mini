.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.search {
  display: flex;
  justify-content: center;
}
.search input {
  font-size: 30rpx;
  background-color: #e2e2e2;
  border-radius: 25rpx;
  width: 100%;
  color: #786f6f;
  padding: 8rpx 0 8rpx 20rpx;
}