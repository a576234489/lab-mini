.container {
  width: 100%;
  height: 100%;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column; 
  box-sizing: border-box;
}
.scroll-content {
  height: 100%;
}
.introduction-content {
  font-size: 30rpx;
}
.introduction-content view {
  text-indent:2em
}
.introduction-content text {
  font-weight: 700;

}
.introduction-content view:nth-child(n + 2){
  margin-top: 20rpx;
}
.introduction-content .two {
  text-indent:3em
}